<main class="text-center">
    {{#if rows}}
        {{#each rows}}

            <form method="post" action="/viewAndGradeAssignment">
                <div class="form-control">
                    <h1 class="h3 mb-3 font-weight-normal">Grade Assignment</h1>

                    <h2 class = "h3 mb-3 font-weight-normal leftText" >Submission</h2>
                    <p class = "leftText"><strong>Username</strong>: {{username}}</p>
                    <p class = "leftText"><strong>Description</strong>: {{description}}</p>
                    <p class="formatText leftText"><strong>Submission</strong>: <br>{{submission}}</p>
                
                <input class="hiddenFO" type="text" name="id" value="{{id}}">

               
                    <h4 class="h3 mb-3 font-weight-normal">Numerical Grade</h4> 
                    <input class="formInput" type="text" name="grade"  placeholder="eg. 75"><br>
                    <h4 class="h3 mb-3 font-weight-normal" >Comments</h4>
                    <textarea style="min-Width: 100%" rows="10" cols="40" name="comments"  placeholder="eg. Good job"></textarea><br>
                    <input class="specialButton" type="submit" value="Submit Grade">
                </div>
            </form>
        {{/each}}
    {{/if}}
</main>