<main class="container"> 
    <div class="row">
        <div class="col-lg-5">

          <div style=" border-bottom: 6px solid grey; border-right: 4px solid grey; background-color: white;
           padding: 15px;  border-radius: 10px" >
          {{#if user}}
                <h4>Welcome, Administrator <strong>{{user.username}}</strong> !</h4>
            {{/if}}
            <a href="/addAssignment">Add an assignment</a><br>
            <a href="/assignments">View and grade assignment</a><br>
            <a href="/signup">Add a user (student or admin)</a><br>
            <a href="/officeHour">Edit Office Hour</a><br>
          </div><br><br>
          
          <div style=" border-bottom: 6px solid grey; border-right: 4px solid grey; background-color: white;
           padding: 15px;  border-radius: 10px">
            <p>
            <h3>Progress Reports:</h3>
            <h5>Assignments Finished: {{finished}}%</h5>
            <div class="progress">
              <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: {{finished}}%" aria-valuenow="{{finished}}" aria-valuemin="0" aria-valuemax="100"></div>
            </div> 
            <br>
            <h5>Submissions Graded: {{graded}}%</h5>
            <div class="progress">
             <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: {{graded}}%" aria-valuenow="{{graded}}" aria-valuemin="0" aria-valuemax="100"></div>
            </div> 
            </p>
          </div>
          
        </div>

        <div class="col-lg-1"> <br></div>

        <div style="border-bottom: 6px solid grey; border-right: 4px solid grey;
         background-color: white; border-radius: 10px; padding: 20px" class="col-lg-6">

