            {{#if rows}}
                <table display="none" id="myTable">
                    <thead>
                    <th>Username</th><th>Type</th></tr>
                    </thead>
                    <tbody>
                        {{#each rows}}
                            <tr>
                                <td> {{ username }}</td>
                                <td> {{ isadmin }}</td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            {{/if}}   
        </div>
